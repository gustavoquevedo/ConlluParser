@model ConlluParser.Models.ConlluParserViewModel

@{
    ViewBag.Title = "View";
}

<h2>View</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>ConlluParserParams</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Params.ConlluFilePath, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Params.ConlluFilePath, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Params.RemovePunctuation, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Params.RemovePunctuation)
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Params.ToLowerCase, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Params.ToLowerCase)
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Params.RemoveComments, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Params.RemoveComments)
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Params.RemoveRangeLines, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Params.RemoveRangeLines)
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Params.RemoveSubindexLines, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.Params.RemoveSubindexLines)
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="submit" value="Preview" class="btn btn-default" />
            @Html.Partial("_PreviewStats", Model.Corpus)
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="submit" value="Generate" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
